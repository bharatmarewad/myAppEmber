<form>
  <div class="form-group">
    <label for="firstName">First Name:</label>
    {{input type="text" value=model.firstName class="form-control"}}
  </div>
  <div class="form-group">
    <label for="middleName">Middle Name:</label>
    {{input type="text" value=model.middleName class="form-control"}}
  </div>
  <div class="form-group">
    <label for="lastName">Last Name:</label>
    {{input type="text" value=model.lastName class="form-control"}}
  </div>
  <div class="form-group">
    <label for="email">email:</label>
    {{input type="text" value=model.emailAddress class="form-control"}}
  </div>
  <div class="form-group">
    <label for="phoneNumber">Phone Number:</label>
    {{input type="text" value=model.phoneNumber class="form-control"}}
  </div>
  <div class="row">
    <div class="col-lg-11" style="text-align: right">
        <button type="reset" class="btn btn-default">Reset</button>
    </div>
    <div class="col-lg-1">
        <button type="submit" class="btn btn-primary" {{action "addEmployee" model}}>Submit</button>
    </div>
  </div>
</form>
